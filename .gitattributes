# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly set line endings for common text files to LF (Unix-style)
*.js     text eol=lf
*.ts     text eol=lf
*.jsx    text eol=lf
*.tsx    text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.json   text eol=lf
*.py     text eol=lf
*.sh     text eol=lf
*.java   text eol=lf
*.go     text eol=lf

# Treat shell scripts as executable
*.sh     text eol=lf
*.sh     eol=lf
*.sh     text executable

# Binary files - don't treat as text, avoid line ending normalization
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.ttf    binary
*.woff   binary
*.woff2  binary
*.eot    binary
*.zip    binary
*.gz     binary

# Windows batch scripts
*.bat    text eol=crlf
*.cmd    text eol=crlf
